<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_lv_item"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_pro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/color_content_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="海南妃子笑笑笑"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/protext3" />

            <TextView
                android:id="@+id/tv_product_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="一元一斤/海南妃子笑笑笑/0000"
                android:textColor="@color/color_text_product_desc"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="12"
                    android:textColor="@color/red"
                    android:textSize="@dimen/protext3" />


                <TextView
                    android:id="@+id/order_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/price"
                    android:layout_alignParentEnd="true"
                    android:gravity="bottom"
                    android:text="1"
                    android:textColor="@color/colorGreen1"
                    android:textSize="@dimen/protext3" />

                <TextView
                    android:id="@+id/x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/price"
                    android:layout_toLeftOf="@id/order_sum"
                    android:text="x"
                    android:visibility="gone"
                    android:textSize="@dimen/protext3" />

                <TextView
                    android:id="@+id/yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/price"
                    android:layout_alignParentStart="true"
                    android:text="￥"
                    android:visibility="gone"
                    android:textColor="@color/color_text_product_desc"
                    android:textSize="@dimen/protext3" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>